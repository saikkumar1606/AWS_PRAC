sudo yum install -y amazon-cloudwatch-agent

sudo vim /tmp/cloudwatch-agent-config.json 






{
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/httpd/access_log",
            "log_group_name": "Apache-Access-Logs",
            "log_stream_name": "{instance_id}"
          }
        ]
      }
    }





sudo /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a 
fetch-config -m ec2 -c file:/tmp/cloudwatch-agent-config.json -s
  }
}
